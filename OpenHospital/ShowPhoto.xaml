<Window x:Class="OpenHospital.ShowPhoto"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:OpenHospital"
        mc:Ignorable="d"
        Title="ShowPhoto" Height="450" Width="800" WindowStyle="None" AllowsTransparency="True" Background="Transparent">
    <Grid>

       
        <Rectangle RadiusX="15" RadiusY="15" />
        <Canvas Margin="45,10,45,0" >
            <Canvas.Background>
                <ImageBrush x:Name="result" Stretch="Uniform"></ImageBrush>
            </Canvas.Background>
        </Canvas>

        <Button x:Name="ButtonClose" Padding="0" Background="{x:Null}" MouseRightButtonDown="ShowMeme_Click" BorderBrush="{x:Null}" Click="buttonCancel_Click"  Foreground="Black" Height="Auto" Margin="755,0,0,394" >
            <materialDesign:PackIcon Kind="Power"  Foreground="Black"/>
        </Button>

    </Grid>
</Window>
